<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddeventFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Nama Acara"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            />

        <EditText
            android:id="@+id/nama_acara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama acara"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Deskripsi Acara"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/deskripsi_acara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan deskripsi acara"
            />

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Foto/Poster"
            android:layout_marginTop="16dp"
            android:textSize="18dp"
            />

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/bUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Foto"

            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            />

        <Button
            android:id="@+id/addEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Acara"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/edit_round"
            />

    </LinearLayout>



</ScrollView>